<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/text_iconColor">

    <LinearLayout
        android:id="@+id/firstTab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <!--设置button不能处理点击事件
        android:clickable="false"
        android:background="#00000000"  背景透明
        -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/firstImageSelect"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_tab_msg_h" />

            <ImageView
                android:id="@+id/firstImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_tab_msg" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textFirstSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:textSize="12sp"
                android:textColor="@color/tab_green"/>
            <TextView
                android:id="@+id/textFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:textSize="12sp"
                android:textColor="@color/tab_gray"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/secondTab"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/secondImageSelect"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_tab_contact_h" />

            <ImageView
                android:id="@+id/secondImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_tab_contact" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textSecondSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通讯录"
                android:textSize="12sp"
                android:textColor="@color/tab_green"/>
            <TextView
                android:id="@+id/textSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通讯录"
                android:textSize="12sp"
                android:textColor="@color/tab_gray"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdTab"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/thirdImageSelect"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_tab_moments_h" />

            <ImageView
                android:id="@+id/thirdImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_tab_moments" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textThirdSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现"
                android:textSize="12sp"
                android:textColor="@color/tab_green"/>

            <TextView
                android:id="@+id/textThird"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现"
                android:textSize="12sp"
                android:textColor="@color/tab_gray"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

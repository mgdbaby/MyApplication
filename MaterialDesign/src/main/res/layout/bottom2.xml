<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/text_iconColor">

    <LinearLayout
        android:id="@+id/firstTab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/firstImage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_tab_msg_h" />
        <TextView
            android:id="@+id/textFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:textSize="12sp"
            android:textColor="@color/tab_green"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/secondTab"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/secondImage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_tab_contact" />

        <TextView
            android:id="@+id/textSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通讯录"
            android:textSize="12sp"
            android:textColor="@color/tab_gray"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdTab"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/thirdImage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_tab_moments" />

        <TextView
            android:id="@+id/textThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现"
            android:textSize="12sp"
            android:textColor="@color/tab_gray"/>

    </LinearLayout>
</LinearLayout>
